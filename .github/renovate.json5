{
    $schema: "https://docs.renovatebot.com/renovate-schema.json",
    automergeType: "pr",
    patch: {
        automerge: true
    },
    minor: {
        automerge: true
    },
    extends: [
        "config:best-practices",
        ":dependencyDashboard",
        ":enableVulnerabilityAlerts",
        ":rebaseStalePrs",
        ":semanticCommits",
        ":semanticPrefixChore",
        ":separateMajorReleases",
        ":prImmediately"
    ],
    prConcurrentLimit: 0,
    lockFileMaintenance: {
        enabled: true
    },
    customManagers: [
        {
            matchStringsStrategy: "any",
            customType: "regex",
            fileMatch: [
                "^\\.github/workflows/.*\\.yml$"
            ],
            matchStrings: [
                "container:\\s*\"?(?<depName>[^\"]+):(?<currentValue>[^\"]+)\"?"
            ],
            datasourceTemplate: "docker",
        }
    ]
}
