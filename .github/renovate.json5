{
    $schema: 'https://docs.renovatebot.com/renovate-schema.json',
    automergeType: 'pr',
    extends: [
        'config:best-practices',
        ":automergeDigest",
        ":automergeMinor",
        ":automergePatch",
        ':dependencyDashboard',
        ':enableVulnerabilityAlerts',
        ':rebaseStalePrs',
        ':semanticCommits',
        ':semanticPrefixChore',
        ':separateMajorReleases',
        ':prImmediately',
    ],
    prConcurrentLimit: 0,
    lockFileMaintenance: {
        enabled: true,
    },
    customManagers: [
        {
            matchStringsStrategy: 'any',
            customType: 'regex',
            managerFilePatterns: [
                '/^\\.github/workflows/.*\\.yml$/',
            ],
            depTypeTemplate: 'container',
            datasourceTemplate: 'docker',
            versioningTemplate: 'docker',
            matchStrings: [
                'container_image: "(?<depName>.*?):(?<currentValue>.*?)(?:@(?<currentDigest>sha256:[a-f0-9]+))?",',
            ],
            autoReplaceStringTemplate: 'container_image: "{{depName}}{{#if newValue}}:{{newValue}}{{/if}}{{#if newDigest}}@{{newDigest}}{{/if}}",',
        },
        {
            customType: 'regex',
            managerFilePatterns: [
                '/^\\.github/docker/.*/Dockerfile$/',
            ],
            matchStringsStrategy: 'any',
            matchStrings: [
                'pip\\s+install(\\s+--[^\\s]+)+?\\s+(?<depName>[^\\s]+?)==(?<currentValue>.+?)\\s'
            ],
            datasourceTemplate: 'pypi'
        }
    ],
    packageRules: [
        {
            matchDatasources: [
                'docker',
            ],
            pinDigests: true,
            automerge: true,
        },
    ],
}
